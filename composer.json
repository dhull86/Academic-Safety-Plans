{
    "name": "colbycommunications/colby-base-theme",
    "type": "wordpress-theme",
    "license": "MIT",
    "description": "Colby WordPress starter theme with a modern development workflow",
    "authors": [
        {
            "name": "Brandon Waltz",
            "email": "brandon.waltz@colby.edu"
        }
    ],
    "keywords": [
        "wordpress"
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": ">=7.1",
        "composer/installers": "~1.0",
        "illuminate/support": "5.6.*",
        "roots/sage-lib": "~9.0.9",
        "soberwp/controller": "~2.1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8.0",
        "roots/sage-installer": "~1.6"
    },
    "scripts": {
        "test": [
            "phpcs"
        ],
        "post-create-project-cmd": [
            "Roots\\Sage\\Installer\\ComposerScript::postCreateProject"
        ]
    }
}
